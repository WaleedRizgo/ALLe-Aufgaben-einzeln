<Window x:Class="Layouts.LayoutViewBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="LayoutViewBox" Height="300" Width="394">
    <Grid>
          <!--Viewbox-->
        <Viewbox 
                     HorizontalAlignment="Left"
                     MaxHeight="500">

            <Canvas Width="200"
                        Height="150">
                <Ellipse Fill="Red"
                             Stroke="Blue"
                             Canvas.Left="10"
                             Canvas.Top="50"
                             Width="100"
                             Height="50"
                             HorizontalAlignment="Left"></Ellipse>
                <Rectangle Fill="Yellow"
                               Stroke="Blue"
                               Canvas.Left="30"
                               Canvas.Top="40"
                               Width="100"
                               Height="50"
                               HorizontalAlignment="Left"></Rectangle>
            </Canvas>
        </Viewbox>


    </Grid>
</Window>
