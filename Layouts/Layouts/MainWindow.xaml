<Window x:Class="Layouts.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="478" Width="357">
    <Grid>
        <Border BorderBrush="Blue" BorderThickness="4" CornerRadius="5" Margin="5">
        <StackPanel ButtonBase.Click="Button_Click" Margin="10">
                <Button Content="LayoutGrid" Margin="4" Padding="3"/>
                <Button Content="LayoutDockPanel" Margin="4" Padding="3"/>
                <Button Content="ControlGridSplitter" Margin="4" Padding="3"/>
                <Button Content="LayoutWrapPanel" Margin="4" Padding="3"/>
                <Button Content="LayoutCanvas" Margin="4" Padding="3"/>
                <Button Content="LayoutViewBox" Margin="4" Padding="3"/>
                <Button Content="ControlInkCanvas" Margin="4" Padding="3"/>
                <Button Content="ControlExpander" Margin="4" Padding="3"/>
                <Button Content="ControlComboBox" Margin="4" Padding="3"/>
                <Button Content="ControlTab" Margin="4" Padding="3"/>
                <Button Content="ControlPopup" Margin="4" Padding="3"/>
                <Button Content="ControlButton" Margin="4" Padding="3"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
